{
  "expo": {
    "name": "littr",
    "slug": "littr-app",
    "platforms": [
      "ios",
      "android"
    ],
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/appIcon/android/web_hi_res_512.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0945DE"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app uses the user location to determing the municipality, and find the closest drop-off facilities",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app uses the user location to determing the municipality, and find the closest drop-off facilities"
      }
    },
    "android": {
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ]
    },
    "androidStatusBar": {
      "translucent": false,
      "hidden": true
    }
  }
}
